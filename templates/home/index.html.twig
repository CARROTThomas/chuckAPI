{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    {% block stylesheets %}

        {{ parent() }}
        {{ encore_entry_link_tags('home') }}
    {% endblock %}

    <h1 class="coucou">coucou</h1>


    {% for content in jokes %}
        <div class="p-3 mb-1 border d-flex justify-content-between align-items-center">
            <p class="col-10">{{ content.value }}</p>
            {% if app.user %}
                <div class="col-2">
                    <a class="btn btn-primary m-1" href="{{ path('app_home_sauv', {value:content.value}) }}">sauv joke</a>
                    <a class="btn btn-warning changeJoke" href="">change Joke</a>
                </div>
            {% endif %}
        </div>

    {% endfor %}

    <a class="btn border-dark bg-dark text-primary" href="{{ path('app_home') }}">voir 5 une autres blagues</a>




{% endblock %}
